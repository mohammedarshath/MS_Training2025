    "spring": {
        "application": {
            "name": "boeing-common"
        },
        "cloud": {
            "config": {
                "uri": "http://host.docker.internal:8888",
                "validateCertificates": false
            }
        }
    },
    "eureka": {
        "client": {
            "serviceUrl": "http://host.docker.internal:8761/eureka/",
            "shouldRegisterWithEureka": true,
            "shouldFetchRegistry": false,
            "registryFetchIntervalSeconds": 10,
            "instanceInfoReplicationIntervalSeconds": 10

        }
    },
    "Jwt": {
        "Authority": "http://localhost:8080/realms/master",
        "ValidateAudience": false

    },
    "SwaggerOAuth": {
        "AuthorizationUrl": "http://localhost:8080/realms/master/protocol/openid-connect/auth",
        "TokenUrl": "http://localhost:8080/realms/master/protocol/openid-connect/token"
        //"ClientId": "user2",
        //"Scope": "developer"
    },
    "Kafka": {
        "BootstrapServers": "kafka:9092",
        "Topic": "vehicles2025",
        "Acks": "all", // safest delivery
        "EnableIdempotence": true, // ensures exactly-once per session
        "CompressionType": "gzip", // smaller payloads
        "LingerMs": 5, // small batching
        "BatchSize": 65536 // 64KB
    }
}