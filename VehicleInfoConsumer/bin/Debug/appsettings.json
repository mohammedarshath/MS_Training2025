{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Kafka": {
        "BootstrapServers": "kafka",
        "Topic": "vehicles2025",
        "GroupId": "vehicle-info-consumer-api",
        "AutoOffsetReset": "Earliest", // Start at earliest if no committed offset
        "EnableAutoCommit": false, // Weâ€™ll commit manually after processing
        "SessionTimeoutMs": 10000,
        "MaxPollIntervalMs": 300000,
        "FetchMinBytes": 1,
        "FetchWaitMaxMs": 50
    },
    "ConnectionString": "mongodb://host.docker.internal:27017",
    "DatabaseName": "VehicleStore",
    "VehiclesCollectionName": "vehicles"
}
